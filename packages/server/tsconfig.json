{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "rootDir": "./src",
    "paths": {
      "~/*": ["packages/*"]
    },
    "strict": true,
    "baseUrl": "./",
    "typeRoots": [
      "./src/typeRoots",
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "./spec/**/*.ts",
    "./src/Session.d.ts"
  ],
  "files": [
    "./src/typeRoots/Session.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "build",
    "dist",
    "./src/**/*.jsx"
  ],
}